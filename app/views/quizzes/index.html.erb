<div class="row">
	<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
		<h1>Listing questions</h1>
		<table class="table table-bordered table-stripped">
		  <thead>
		  	<th>ID</th>
		    <th>Question</th>
		    <th>Answer1</th>
		    <th>Answer2</th>
		    <th>Answer3</th>
		    <th>Answer4</th>
		    <th>Edit</th>
		    <th>Delete</th>
		  </thead>
			<tbody>
			  <% @quizzes.each do |quiz| %>
			    <tr>
			    	<td><%= quiz.id %></td>
			      <td><%= quiz.quiz %></td>
			      <td><%= quiz.answer1 %></td>
			      <td><%= quiz.answer2 %></td>
			      <td><%= quiz.answer3 %></td>
			      <td><%= quiz.answer4 %></td>
			      <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
			      <td><%= link_to 'Destroy', quiz_path(quiz),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
			    </tr>
			  <% end %>
			</tbody> 
		</table>
	</div>
</div>